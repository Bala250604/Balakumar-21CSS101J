#include<stdio.h>
int main()
{
 
    int i,j,max,k=1;
 
    printf("Enter the Maximum Number of Rows : ");
    scanf("%d",&max);
 
    printf("FLOYD'S TRIANGLE up to %d Rows: \n\n",max);
    for(i=1; i<=max; i++)
    {
        for(j=1; j<=i; j++,k++)
            printf(" %d",k);
        printf("\n");
    }
 
    return 0;
}
